extends layout

block content
    h2.page-header Register
    p Please register using the form below
    ul.errors
    if errors
        each error, i in errors
            div.alert.alert-danger #{error.msg}
    form(method="post", action='/users/register', enctype='multipart/form-data')
        .form-group
        label Name
        input.form-control(name='name',type='text',placeholder='Please enter the name')
        .form-group
        label Email
        input.form-control(name='email',type='email',placeholder='Please enter the email')
        .form-group
        label Username
        input.form-control(name='username',type='text',placeholder='Please enter the username')
        .form-group
        label Password
        input.form-control(name='password',type='password',placeholder='Please enter the password') 
        .form-group
        label Confirm password
        input.form-control(name='password2',type='password',placeholder='Please enter the password')
        .form-group
        label Profile image
        input.form-control(name='profileimage',type='file')
        input.btn.btn-primary(type="submit", name='Sumbit',value='Register') 